# Vision Testing Container - Linux x86_64 with CUDA
FROM nvidia/cuda:12.2-devel-ubuntu22.04

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    pkg-config \
    libssl-dev \
    libclang-dev \
    git \
    curl \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Install Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
ENV PATH="/root/.cargo/bin:${PATH}"

# Set working directory
WORKDIR /workspace

# Copy source code
COPY . .

# Build with vision features and CUDA
RUN cargo build --release --features llama,vision,llama-cuda

# Install Python test dependencies
RUN pip3 install requests

# Create test script
RUN cat > /workspace/run_vision_tests.sh << 'EOF'
#!/bin/bash
set -e

echo "ðŸ§ª Starting Vision Cross-Platform Tests"
echo "Platform: Linux x86_64 (CUDA)"
echo "================================="

# Set test environment
export SHIMMY_VISION_MAX_LONG_EDGE=1024
export SHIMMY_VISION_MAX_PIXELS=2500000
export SHIMMY_VISION_AUTO_DOWNLOAD=1

# Check CUDA availability
echo "ðŸ” Checking CUDA..."
nvidia-smi || echo "âš ï¸ CUDA not available in container"

# Run the cross-compiled vision test
echo "ðŸ–¼ï¸ Running vision functionality tests..."
python3 scripts/test_cross_compiled_vision.py \
    --binary ./target/release/shimmy \
    --test-image assets/vision-samples/final-test.png \
    --license "test-license-key" \
    --output-report /workspace/test-results-linux-cuda.json

echo "âœ… Vision tests completed for Linux x86_64 (CUDA)"
EOF

RUN chmod +x /workspace/run_vision_tests.sh

# Default command
CMD ["/workspace/run_vision_tests.sh"]